body {
  background-color: #d8f3f5;
  background-image: url("graph-paper.svg"); }

* {
  font-family: Times;
  font-size: 16px; }

a {
  color: blue;
  text-decoration: none;
  font-weight: bold; }
  a:hover {
    color: #469646;
    font-style: italic;
    text-decoration: underline; }

#main-container {
  background-color: white;
  padding-left: 30px;
  padding-right: 30px;
  padding-bottom: 30px;
  padding-top: 0px;
  border-style: solid;
  border-width: 15px 10px 10px 10px;
  border-color: #469646;
  border-radius: 10px;
  position: relative;
  z-index: 2; }
  @media only screen and (min-width: 1024px) {
    #main-container {
      width: 1000px;
      margin-left: auto;
      margin-right: auto; }
      #main-container img {
        float: right; } }
  @media only screen and (min-width: 768px) and (max-width: 1023px) {
    #main-container {
      width: 708px;
      margin-left: auto;
      margin-right: auto; } }
#website-name {
  color: red;
  font-weight: bold;
  font-size: 36px;
  text-decoration: none; }
  #website-name:hover {
    font-style: normal; }

nav {
  padding-bottom: 2px;
  position: relative;
  z-index: 1; }
  @media only screen and (min-width: 1024px) {
    nav {
      width: 1000px;
      margin-left: auto;
      margin-right: auto;
      height: 25px; } }
  @media only screen and (min-width: 768px) and (max-width: 1023px) {
    nav {
      width: 708px;
      margin-left: auto;
      margin-right: auto; } }
  nav a {
    font-weight: normal;
    background-color: white;
    color: black;
    text-align: center;
    margin-top: 2px;
    padding-top: 2px;
    padding-bottom: 5px;
    border-width: 2px;
    display: inline-block;
    height: 17px;
    border-style: solid;
    width: 220px;
    border-color: black; }
    nav a:hover {
      background-color: #a6b7a6; }
    @media only screen and (min-width: 1024px) {
      nav a {
        width: 150px;
        border-style: outset groove solid groove;
        border-width: 5px 5px 0px 5px; } }
#you-are-here {
  background-color: #469646;
  color: white;
  border-color: #469646;
  font-weight: bold; }
  @media only screen and (min-width: 1024px) {
    #you-are-here {
      border-bottom-width: 0px; } }
h1 {
  font-size: 28px;
  font-weight: bold; }

h2 {
  font-size: 24px;
  font-weight: bold; }

h3 {
  font-size: 20px;
  font-weight: bold; }

code {
  font-family: monospace;
  background-color: #eee;
  border: 1px solid; }

.list-container {
  text-align: center; }
  .list-container a {
    color: black;
    text-decoration: none;
    font-weight: normal;
    font-style: normal;
    background-color: white;
    display: inline-block;
    vertical-align: top;
    width: 80%;
    height: 200px;
    margin: 5px;
    padding: 10px;
    overflow: hidden;
    text-align: left;
    background-image: linear-gradient(to bottom, transparent, #d8f3f5);
    border-style: solid;
    border-radius: 10px;
    position: relative;
    white-space: normal; }
    @media only screen and (min-width: 768px) and (max-width: 1023px) {
      .list-container a {
        width: 300px; } }
    @media only screen and (min-width: 1024px) {
      .list-container a {
        width: 400px; } }
    .list-container a:hover {
      background-color: #a6b7a6;
      height: auto;
      min-height: 200px; }
    .list-container a h1 {
      font-size: 20px;
      font-weight: bold;
      padding: 5px;
      margin: 0px;
      overflow: hidden;
      background-color: brown;
      color: white;
      margin: -10px -10px 0px -10px;
      text-overflow: ellipsis;
      overflow-x: hidden;
      white-space: nowrap; }
      .list-container a h1:hover {
        font-style: italic;
        text-decoration: underline;
        white-space: normal; }
    .list-container a h2 {
      font-size: 10px; }
    .list-container a h3 {
      font-size: 9px; }

#section-title {
  background-color: #469646;
  color: white;
  margin-left: -30px;
  margin-right: -30px;
  margin-top: 0px;
  padding-left: 15px;
  font-size: 35px; }

#article-title h1 {
  font-size: 30px; }

#article-container {
  background-color: white; }

#page-subtitle {
  font-size: 15px; }

.article-tags {
  font-size: 12px; }

div.mini-section-title {
  background-color: #469646;
  color: white;
  font-style: italic;
  position: absolute;
  text-align: center;
  bottom: -10px;
  right: 0px;
